b = (random.randrange(1,100))
print(f"The second number is {b}")
if a == b:
    print("WOW, the two numbers are the same!")
else:
    print("The two random numbers are different, not surprising.")

# Dice 3.5
import random
print('HERE COME THE DICE!')
a = int(random.randrange(1,7))
print(f'Roll #1: {a}')
b = int(random.randrange(1,7))
print(f'Roll #1: {b}')
total = float(a+b)
print(total)


